@model JobPortal.Models.Home.HUserSideBarViewModel

<div class="sidebar bg-light d-flex flex-column ">

    <img src=@Model.Profile class="img-thumbnail w-100" height="200" />
    <div class="px-3">
        <div class="text-center">
            <label class="form-label fw-bold">@Model.Name</label>
        </div>
        <div class="text-center text-secondary">
            <label class="form-label">@Model.About</label>
        </div>
        <div class="text-start mt-2">
            <label class="form-label">Connections<span class="badge bg-secondary m-1">5</span></label>
        </div>
        <div class="text-start">
            <label class="form-label">Who viewed your profile<span class="badge bg-secondary m-1">8</span></label>
        </div>        
    </div>
    <div class="mt-auto w-100">
        <a class="btn btn-danger w-100" asp-action="LogOut" asp-controller="Account">Log Out</a>
    </div>
</div>
